<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.usuario.ProfessorAlunoActivity">

    <LinearLayout
        android:layout_centerVertical="true"
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/select_prof"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="0.5"
            android:orientation="vertical">
                <ImageView
                    android:id="@+id/img_prof"
                    android:layout_width="match_parent"
                    android:layout_height="206dp"
                    android:background="@drawable/seletor_tipo_usuario"
                    android:adjustViewBounds="true"
                    android:src="@drawable/prof" />

            <TextView
                android:id="@+id/txt_prof"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Professor"
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="#000"
                android:textStyle="bold"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="0.5"
            android:id="@+id/select_aluno"
            android:orientation="vertical">
                <ImageView
                    android:id="@+id/img_aluno"
                    android:layout_width="match_parent"
                    android:layout_height="205dp"
                    android:background="@drawable/seletor_tipo_usuario"
                    android:adjustViewBounds="true"
                    android:src="@drawable/student"
                    />

            <TextView
                android:id="@+id/txt_aluno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Aluno"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:textSize="20sp"
                android:textColor="#000"
                android:textStyle="bold"/>
        </LinearLayout>

    </LinearLayout>
    <!--<TextView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_below="@+id/content"-->
        <!--android:layout_marginTop="20dp"-->
        <!--android:textSize="20sp"-->
        <!--android:textColor="@color/colorPrimary"-->
        <!--android:textStyle="bold"-->
        <!--android:text="Selecione uma opção"-->
        <!--android:gravity="center"/>-->

    <TextView
        android:id="@+id/btn_prosseguir"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Prosseguir"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:textSize="16sp"
        android:layout_marginTop="20dp"
        android:padding="12dp"
        android:shadowRadius="5"
        android:shadowDx="3"
        android:shadowDy="5"
        android:shadowColor="#000"
        android:layout_margin="20dp"
        android:background="@drawable/seletor_button_login"
        style="@style/Widget.AppCompat.Button"
        android:textColor="#fff"
        android:gravity="center"/>

</RelativeLayout>