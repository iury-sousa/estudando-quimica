<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    app:cardCornerRadius="6dp"
    app:cardUseCompatPadding="true">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_tubo2"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@drawable/bgrect"
            android:padding="20dp">
            <TextView
                android:id="@+id/id_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/titleTextView"
                style="@style/TextAppearance.AppCompat.Title"
                android:maxLength="25"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:text="@string/title_1"
                android:layout_below="@+id/id_card"
                android:shadowColor="#000"
                android:shadowDy="5"
                android:shadowDx="2"
                android:shadowRadius="10"
                android:textAlignment="center"
                android:textColor="#FFF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/contentTextView"
                android:text="@string/text_1"
                android:gravity="center"
                style="@style/TextAppearance.AppCompat.Body1"
                android:layout_below="@+id/titleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:textColor="#FFF"
                android:shadowColor="#000"
                android:shadowDy="2"
                android:shadowDx="2"
                android:shadowRadius="2"
                android:layout_centerHorizontal="true"
                android:maxLines="7"
                android:maxHeight="117dp"/>

            <Button
                style="@style/ButtonCard"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginTop="10dp"
                android:background="#a236ff"
                android:text="Estudar"
                android:id="@+id/botaoConteudo"/>
        </RelativeLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|end"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="-5dp"
            android:src="@drawable/ic_bookmark_roxo" />

    </FrameLayout>

</android.support.v7.widget.CardView>
